# Database Configuration
# Par défaut, SQLite est utilisé (pas besoin de serveur)
# Pour utiliser MySQL, définissez USE_MYSQL=true et configurez les paramètres ci-dessous
USE_MYSQL=false

# Configuration MySQL (si USE_MYSQL=true)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=miscadin

# Configuration SQLite (si USE_MYSQL=false)
DB_PATH=instance/miscadin.db

# Flask Configuration
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# CORS Configuration
# URL du frontend React (Vite par défaut)
CORS_ORIGINS=http://localhost:5173

# SQLAlchemy (optionnel)
# Mettre à true pour voir les requêtes SQL dans les logs
SQLALCHEMY_ECHO=False

